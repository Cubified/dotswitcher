{
  "name": "dotswitcher",
  "version": "0.0.1-testing",
  "description": "A simple Node.js app to manage and switch between configuration files",
  "main": "dotswitcher.js",
  "scripts": {
    "start": "node dotswitcher.js",
	"build": "mkdir -p bin/ && pkg . --output bin/dotswitcher"
  },
  "repository":{
	"type": "git",
	"url": "https://github.com/Cubified/dotswitcher"
  },
  "keywords": [
    "node",
    "dotfiles",
    "config",
    "rice"
  ],
  "author": "CubeDoodl",
  "license": "MIT",
  "bugs":{
	  "url":"https://github.com/Cubified/dotswitcher/issues"
  },
  "homepage":"https://github.com/Cubified/dotswitcher#readme",
  "dependencies": {
    "blessed": "^0.1.81",
    "fs-extra": "^4.0.0",
    "tar": "^3.1.7"
  },
  "bin": "dotswitcher.js",
  "pkg": {
    "scripts": "node_modules/blessed/lib/widgets/*.js"
  }
}
